# ============================================
# Configuração do Banco de Dados PostgreSQL
# ============================================
# Para uso com Docker Compose, use 'postgres' como host
# Porta 5433 para evitar conflito com PostgreSQL local (5432)
# Para uso local, use 'localhost'
DB_HOST=postgres
DB_PORT=5433
DB_NAME=ai_agent_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSLMODE=disable

# ============================================
# API Keys - Obrigatórias
# ============================================
# OpenAI API Key (para embeddings)
OPENAI_API_KEY=

# OpenRouter API Key (para modelos LLM)
OPENROUTER_API_KEY=

# ============================================
# API Keys - Opcionais
# ============================================
# Tavily API Key (para busca web)
TAVILY_API_KEY=

# Cohere API Key (para reranking)
COHERE_API_KEY=your-cohere-api-key-here

# ============================================
# Configurações do Sistema
# ============================================
# Checkpointing do LangGraph
USE_POSTGRES_CHECKPOINT=true

# Modelo padrão
DEFAULT_MODEL_NAME=google/gemini-2.5-flash

# Usar Tavily por padrão
DEFAULT_USE_TAVILY=false

# Debug de logs do agente
DEBUG_AGENT_LOGS=true

# OpenRouter Base URL (opcional)
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ============================================
# Configuração do Frontend
# ============================================
# URL da API Backend (para o frontend acessar)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_BASE=http://localhost:8000

# LangGraph Studio (opcional)
NEXT_PUBLIC_LANGGRAPH_BASE=http://127.0.0.1:2024
NEXT_PUBLIC_ASSISTANT_ID=agent

# ============================================
# Integrações de Gestão de TI
# ============================================

# GLPI Integration (ITSM)
GLPI_ENABLED=true
GLPI_BASE_URL=https://your-glpi.com/apirest.php
GLPI_APP_TOKEN=your_app_token_here
GLPI_USER_TOKEN=your_user_token_here

# Zabbix Integration (Monitoring)
ZABBIX_ENABLED=true
ZABBIX_BASE_URL=https://your-zabbix.com
ZABBIX_API_TOKEN=your_zabbix_api_token_here

# Linear.app Integration (Project Management)
LINEAR_ENABLED=true
LINEAR_API_KEY=lin_api_your_linear_key_here
